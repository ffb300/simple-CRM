<?xml version="1.0" encoding="UTF-8"?>
<form 
	validate="true"
				lessfiles="media://com_gs_bootstrap337/css/gs.less||media://com_gs_bootstrap337/css/bootstrap.css"
					>
             <!-- 	optional: name label="GS_NAV"  instead of emptylabel -->
  <fieldset name="navigation" emptylabel="1" class="col-md-12" >
	  <field name="navigation" type="ViewTemplate" emptylabel="1"	source="site:com_gscrm/Contracts/Nav_contracts" />
  </fieldset>						

  <fieldset name="fieldset3" class="col-md-6" label="COM_GSCRM_NOTES_FIELDSET3" >	      			
    
     <field name="new_note" type="Text" class=" col-md-12 high28" labelclass="label_left" label_placement="top"
    	empty_replacement="GS_NEW_NOTE" label="GS_NEW_NOTE" tooltip="GS_TIP_PLUS_NOTE_OPP" />
		
    <field name="interaction" class="high28" type="ViewTemplate" emptylabel="1" tooltip="COM_GSCRM_NOTES_INTERACTION_DESC"
    		source="site:com_gscrm/Contracts/Notes_contracts" />
  </fieldset>						
						
  <fieldset name="information" class="col-md-6" label="COM_GSCRM_CONTRACTS_GROUP_BASIC">
    
    <field name="title" type="Text" class="col-md-12 high28" labelclass="pr0" required="true"
    			label="COM_GSCRM_CONTRACTS_TITLE_LABEL" tooltip="COM_GSCRM_CONTRACTS_TITLE_DESC"/>

	<field name="account" class="high28" required="true"
			label="COM_GSCRM_CONTRACTS_ACCOUNT_LABEL" tooltip="COM_GSCRM_CONTRACTS_ACCOUNT_DESC"
	   		type="Model"
		    model="Accounts"
		    key_field="gscrm_account_id"
		    value_field="title"
		    apply_access="true"
			apply_enabled="true"
		    none="GS_SELECT"
			>
		    <state key="code">[ITEM:CODE]</state>
		    <state key="type">2</state>
		</field>      			
     			
    <field name="type" type="radio" class="btn-group btn-group-yesno" required="true"
		    label="COM_GSCRM_CONTRACTS_TYPE_LABEL" tooltip="COM_GSCRM_CONTRACTS_TYPE_DESC" >
			<option value="2">GS_PE</option>
			<option value="1">GS_BZ</option>
		</field>  
     			
    <field name="enabled" type="radio" class="btn-group btn-group-yesno"
		    label="COM_GSCRM_CONTRACTS_ENABLED_LABEL" tooltip="COM_GSCRM_CONTRACTS_ENABLED_DESC" >
			<option value="1">COM_GSCRM_CONTRACTS_ENABLED_YES</option>
			<option value="0">COM_GSCRM_CONTRACTS_ENABLED_NO</option>
		</field>  
		
<!-- 	<field type="checkbox" name="editor" label="Editor" data-toggle="modal" data-target=".bs-editor-modal" />  future use, launch editor for contract description-->
	
    <field name="notes" type="Textarea" class="col-md-12" labelclass="pr0" label="COM_GSCRM_CONTRACTS_NOTES_LABEL" tooltip="COM_GSCRM_CONTRACTS_NOTES_DESC"/>

    <field name="cv" type="Currency" class="col-md-6 high28" labelclass="pr0" 
    			label="COM_GSCRM_CONTRACTS_CV_LABEL" tooltip="COM_GSCRM_CONTRACTS_CV_DESC"/>
    
    <field name="currency" class="col-md-6 high28" labelclass="pr0"
    			label="COM_GSCRM_CONTRACTS_CURRENCY_LABEL" tooltip="COM_GSCRM_CONTRACTS_CURRENCY_DESC"
	   		type="Model"
		    model="Currencies"
		    key_field="gscrm_currency_id"
		    value_field="symbol"
		    apply_access="true"
			apply_enabled="true"
		    none="GS_SELECT"
			>
		    <state key="code">[ITEM:CODE]</state>				
		</field>     
    
    <field name="sdate" type="Calendar" filter="false" class="col-md-6 high28"
    			label="COM_GSCRM_CONTRACTS_SDATE_LABEL" tooltip="COM_GSCRM_CONTRACTS_SDATE_DESC"/>
    			
    <field name="edate" type="Calendar" filter="false" class="col-md-6 high28"
    			label="COM_GSCRM_CONTRACTS_EDATE_LABEL" tooltip="COM_GSCRM_CONTRACTS_EDATE_DESC"/>	        			          
   
    <field name="owner" class="high28"
	    	label="COM_GSCRM_CONTRACTS_OWNER_LABEL" tooltip="COM_GSCRM_CONTRACTS_OWNER_DESC"
	   		type="Model"
		    model="Beads"
		    key_field="gscrm_bead_id"
		    value_field="user_name"
		    apply_access="true"
			apply_enabled="true"
		    none="GS_SELECT"
			>
		    <state key="code">[ITEM:CODE]</state>				
		</field> 

    <field name="code" type="Text" readonly="true" class="high28" 
    			label="COM_GSCRM_CONTRACTS_CODE_LABEL" tooltip="COM_GSCRM_CONTRACTS_CODE_DESC"/>			
		
